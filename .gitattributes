# Auto-detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files
*.js text eol=lf
*.css text eol=lf
*.html text eol=lf
*.htm text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.txt text eol=lf
*.xml text eol=lf
*.svg text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files (don't touch these)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.zip binary
*.gz binary
*.tar binary

# Git config files
.gitattributes text eol=lf
.gitignore text eol=lf
.editorconfig text eol=lf
